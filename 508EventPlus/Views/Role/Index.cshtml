@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewData["Title"] = "Index";
}
<!--Defines the background colour by code -->
<body style="background-color:#ECFEFD;">

</body>
<!--Title of the page-->
<h1>List of Roles</h1>
<!--Displays a button called Create to create new roles-->
<p>
    <a asp-action="Create">
        <input type="button" class="btn btn-dark" value="Create" />
    </a>
</p>
<!--Defines the header of the table and the order of its contents-->
<table class="table table-striped table-bordered">
    <thread>
        <tr>
            <td>Id</td>
            <td>Name</td>
        <tr />
    </thread>
    <!--Displays the list of roles-->
    <tbody>
        @foreach (var role in Model)
        {
        <tr>
            <td>@role.Id</td>
            <td>@role.Name</td>
            <td>
                <a asp-action="Delete" asp-route-id="@role.Id">
                   
                        <input type="button" class="btn btn-danger" value="Delete" />
                    </a>
</td>
        </tr>

        }
    </tbody>


</table>


