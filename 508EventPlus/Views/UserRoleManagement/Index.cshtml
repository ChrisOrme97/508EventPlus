@model List<Microsoft.AspNetCore.Identity.IdentityUser>
@{ ViewData["Title"] = "Index"; }

<!--Defines the background colour by code -->
<body style="background-color:#ECFEFD;">

</body>

<h3 class="text-center">User Role Management</h3>
<hr />
<!--Displays a list of users and provides buttons to allow users to change their roles-->
<div class="container">
    <a asp-action="AddUserToRole" class="btn btn-info mr-2">Assign user to role</a>
    <div class="row">
        <!--Displays a message if there are no users-->
        <div class="col-12">
            @if (Model.Count == 0)
            {<p>No users</p> }
            else
            {
                <table class="table">
                    <thead>
                        <tr><th>UserName</th><th>Actions</th></tr>
                    </thead>
                    <tbody>
                        @foreach (var u in Model)
                        {
                            <tr>
                                <td>@u.UserName</td>
                                <td><a class="btn btn-success" asp-route-userId="@u.Id" asp-action="Details">View Details</a>    </td>
                            </tr>
                        }
                    </tbody>
                </table>}
        </div>
    </div>
</div>
